<%- include("partials/header") -%>
<h1>Compose</h1>
<form action="" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="postTitle" autocomplete="off">
  </div>
  <div class="form-group">
    <label>Post</label>
    <textarea class="form-control" rows="5" cols="30" name="postBody" autocomplete="off"></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="postPublish">Publish</button>
</form>
<%- include("partials/footer") -%>
